{% extends 'base.html.twig' %}

{% block title %}Compte{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ user.firstName }} "{{ user.username  }}" {{ user.lastName }}</h1>

    {% if user.isTempPass %}
        <div class="mb-3 alert alert-danger" id="alert" role="alert">
            Votre mot de passe est un mot de passe temporaire.
            <br>
            <a href="{{ path('app_security_logout') }}" class="alert-link">Merci de le modifier en cliquant ICI.</a>
        </div>
    {% else %}
        <div class="mb-3 alert alert-success" id="alert" role="alert">
            Bienvenue {{ user.username }} ✅
        </div>
    {% endif %}

    <div>
        <a href="#" >Informations personnelles</a>
        <a href="#" >Commandes</a>
        <a href="#" >Paramètres</a>
    </div>
</div>
{% endblock %}
