{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="connect-div">
        <form method="post" id="form-connexion">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3 alert alert-danger" role="alert">
                    Vous êtes connecté en tant que <a href="{{ path('app_user_index') }}" class="alert-link">{{ app.user.userIdentifier }}</a>.
                    <br>
                    <a href="{{ path('app_security_logout') }}" class="alert-link">Vous pouvez vous déconnecter en cliquant ICI.</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">Connexion compte client</h1>
            <label for="username">Nom d'utilisateur *</label>
            <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
            <label for="password">Mot de passe *</label>
            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <input type="checkbox" name="_remember_me" id="_remember_me">
                    <label for="_remember_me">Remember me</label>
                </div>
            #}

            <button class="btn btn-lg btn-success btn-connect" type="submit">
                Connexion
            </button>
        </form>

        <div id="create-button">
            <h1 class="h3 mb-3 font-weight-normal">Pas encore client ?</h1>

            <a class="link-btn" href="{{ path('app_user_new') }}">
                <button class="btn btn-lg btn-primary">
                    Créer un compte
                </button>
            </a>
        </div>
    </div>
{% endblock %}
